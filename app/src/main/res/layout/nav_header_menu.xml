<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/material_primary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.liferay.mobile.screens.userportrait.UserPortraitScreenlet
        android:id="@+id/user_portrait_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutId="@layout/activity_user_portrait" />

    <TextView
        android:id="@+id/logged_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>
